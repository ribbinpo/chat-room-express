{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
